extends layout 

block content 
    title= title
    div(class="content")
        div= category.name
        div= "description: "+category.description
        div items:
        each item in item_list
                li 
                    a(href=item.url)= item.name 
        else 
            li there is no Items in here!
        div
            a(href="/catalog/category/"+category._id+"/delete") 
                button delete category
            a(href="/catalog/category/"+category._id+"/update") 
                button update category