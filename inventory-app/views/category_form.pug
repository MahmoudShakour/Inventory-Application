extends layout

block content
    div(class="content")
        h1 #{title}

        form(method='POST' action='')
            div.form-group
                label(for='name') name:
                input#name.form-control(type='text', name='name' value=category?category.name:"" )
                label(for='description') description:
                input#description.form-control(type='text', name='description' value=category?category.description:"")
            button.btn.btn-primary(type='submit') Submit

            if error    
                div "enter valid data" 